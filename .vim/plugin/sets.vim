set nocompatible
set encoding=utf-8
set hidden
set noswapfile
set updatetime=300
set backupcopy=yes

" Personal options
syntax on
set number
set nowrap
set ruler
set showtabline=2
set termguicolors
set background=dark

" Indentation
set tabstop=2 softtabstop=2
set shiftwidth=2
set expandtab
set smartindent
set autoindent
